.cart-list{
  border-bottom: 1rpx solid #e9e9e9;
  height: 220rpx;
  display: flex;
  align-items:center;
  padding: 20rpx;
}
.item-cion{
}
.item-image{
  width: 180rpx;
  height: 180rpx;
  padding: 0 20rpx;
 
}
.item-info{
  height: 180rpx;
  display: flex;
  width: 70%;
  flex-direction: column;
  justify-content:space-between;
}
.item-child{
  display: flex;
  
  justify-content:space-between;
}
.close{
  padding-right: 30rpx;
}
.count-box{
  font-size: 33rpx;
}
.cart-count-down{
  padding: 0 30rpx 0 15rpx;
}
.cart-count-num{
  padding: 0 30rpx;
}
.cart-count-add{
  padding: 0 15rpx 0 30rpx;
}
.cart-foot{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background:#AB956D;

}
.cart-foot icon{
  position: absolute;
  left: 20rpx;
  top: 25rpx;
  width: 45rpx;
  height: 45rpx;
}
.cart-foot text{
  color: #fff;
  position: absolute;
  
}
.all{
  left: 85rpx;
}
.price{
  right: 30%;
}
.to-oeder{
  right: 30rpx;
}